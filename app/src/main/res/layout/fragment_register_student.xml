<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterStudent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:width="170dp"
                android:height="46dp"
                android:fontFamily="@font/dm_sans_bold"
                android:lineHeight="45.57dp"
                android:text="Welcome!"
                android:textAlignment="center"
                android:textColor="#1c1939"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dm_sans"
                android:text="Please provide following\ndetails for your new account"
                android:textAlignment="center"
                android:textColor="#CC1C1939"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etstudentname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:width="340dp"
                android:height="50dp"
                android:background="@drawable/bg_gray"
                android:ems="10"
                android:fontFamily="@font/dm_sans"
                android:hint="Full Name"
                android:inputType="textPersonName|textCapSentences"
                android:maxLength="20"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingStart="29dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textColor="#050505"
                android:textColorHint="#606060"
                android:textSize="15dp" />


            <EditText

                android:id="@+id/etstudentemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:width="340dp"
                android:height="50dp"
                android:background="@drawable/bg_gray"
                android:ems="10"
                android:fontFamily="@font/dm_sans"
                android:hint="Email Address"
                android:inputType="none|textEmailSubject"
                android:maxLength="25"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingStart="29dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textColor="#050505"
                android:textColorHint="#606060"

                android:textSize="15dp" />

            <EditText

                android:id="@+id/etpreparation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:width="340dp"
                android:height="50dp"
                android:background="@drawable/bg_gray"
                android:ems="10"
                android:fontFamily="@font/dm_sans"
                android:hint="Preparation for eg.board, ssc ,Upsc, Bpsc"
                android:inputType="none|textEmailSubject"
                android:maxLength="25"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingStart="29dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textColor="#050505"
                android:textColorHint="#606060"

                android:textSize="15dp" />

            <EditText

                android:id="@+id/etstudentCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:width="340dp"
                android:height="50dp"
                android:background="@drawable/bg_gray"
                android:ems="10"
                android:fontFamily="@font/dm_sans"
                android:hint="City / Location"
                android:inputType="none|textEmailSubject"
                android:maxLength="25"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingStart="29dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textColor="#050505"
                android:textColorHint="#606060"

                android:textSize="15dp" />

            <EditText

                android:id="@+id/etstudentphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:width="340dp"
                android:height="50dp"
                android:background="@drawable/bg_gray"
                android:ems="10"
                android:fontFamily="@font/dm_sans"
                android:hint="Phone Number"
                android:inputType="none|phone"
                android:maxLength="10"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingStart="29dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textColor="#050505"
                android:textColorHint="#606060"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etstudentotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_gray"
                android:ems="10"
                android:fontFamily="@font/dm_sans"
                android:gravity="center"
                android:hint="Enter Otp"
                android:inputType="none|phone"
                android:maxLength="6"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textColor="#050505"
                android:textColorHint="#606060"
                android:textSize="15dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/studentregisterbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:width="340sp"
                android:height="60sp"
                android:background="@drawable/editbg"
                android:text="GET OTP"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/dm_sans"
                android:lineHeight="25dp"
                android:text="Already have an account?"
                android:textAlignment="center"
                android:textColor="#CC1C1939"
                android:textFontWeight="400"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/signintv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/dm_sans"
                android:lineHeight="25dp"
                android:text="Sign In"
                android:textAlignment="center"
                android:textColor="#CC1C1939"
                android:textFontWeight="700"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>