<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Test"
            android:textColor="#2196F3"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ettestname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:hint="Test Name"
            android:inputType="textCapSentences|textCapWords"
            android:maxLength="50"
            android:minHeight="48dp"
            android:textColor="#FF5722"
            android:textColorHint="#DAD9D9"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/calendar"
                android:layout_width="40dp"
                android:layout_height="35dp"

                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:id="@+id/tvtestdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:hint="Meeting_Date"
                android:text="Test Date"
                android:textColor="#070707"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clock"
                android:layout_width="40dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_clock" />

            <TextView
                android:id="@+id/tvtesttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"

                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="Meeting_Time"
                android:text="Test Time"
                android:textColor="#070707"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="No of Questions"
                    android:textColor="#3C3C3C" />

                <EditText
                    android:id="@+id/etnofquestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:hint="100"
                    android:inputType="number"
                    android:maxLength="4"
                    android:minWidth="48dp"
                    android:textColor="#2196F3"
                    android:textColorHint="#DAD9D9"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Duration in Mins"
                    android:textColor="#3C3C3C" />

                <EditText
                    android:id="@+id/etduration"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="60"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="#03A9F4"
                    android:textColorHint="#DAD9D9"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Marks for each Correct Ans."
                    android:textColor="#3C3C3C" />

                <EditText
                    android:id="@+id/etcorrectmarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:hint="4"
                    android:inputType="number"
                    android:maxLength="2"
                    android:minWidth="48dp"
                    android:textColor="#2196F3"
                    android:textColorHint="#DAD9D9"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Marks for  InCorrect Ans."
                    android:textColor="#3C3C3C"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etincorrectmarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="-1"
                    android:inputType="text"
                    android:maxLength="2"
                    android:textColorHint="#DAD9D9" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Code:-"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ettestcode"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="56452"
                android:inputType="textPersonName"
                android:maxLength="5"
                android:textColorHint="#DAD9D9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/buttongb"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
